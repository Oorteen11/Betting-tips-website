<h2>ðŸ§¾ Admin Tip Entry</h2>

<form id="tipForm">
  <input type="text" id="match" placeholder="Team A vs Team B" required>
  <input type="text" id="tip" placeholder="Tip (e.g., Under 2.5 Goals)" required>
  <input type="text" id="time" placeholder="Kickoff Time (e.g., 20:00 GMT)" required>
  <select id="category">
    <option value="Safe">Safe</option>
    <option value="Moderate">Moderate</option>
    <option value="Risky">Risky</option>
  </select>
  <button type="submit">Generate Tip Card</button>
</form>

<div class="output" id="output"></div>

<script>
document.getElementById('tipForm').addEventListener('submit', function(e) {
  e.preventDefault();
  const match = document.getElementById('match').value;
  const tip = document.getElementById('tip').value;
  const time = document.getElementById('time').value;
  const category = document.getElementById('category').value;
  
  const html = `
<!-- ${category} Tips -->
<div class="tip-card">
  <div class="match">${match}</div>
  <div class="market">Tip: ${tip}</div>
  <div class="time">Kickoff: ${time}</div>
</div>`;
  
  document.getElementById('output').textContent = html;
});
</script>

